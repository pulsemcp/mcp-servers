{
  "name": "mcp-servers-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for MCP servers built by PulseMCP",
  "private": true,
  "type": "module",
  "workspaces": [
    "experimental/*/",
    "experimental/*/local",
    "experimental/*/shared",
    "productionized/*/",
    "productionized/*/local",
    "productionized/*/shared",
    "libs/*",
    "libs/*/local",
    "libs/*/shared"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf experimental/**/build experimental/**/dist productionized/**/build productionized/**/dist"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.4.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
