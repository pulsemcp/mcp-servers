{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": [
    "tests/**/*.ts",
    "vitest.config.ts",
    "vitest.config.integration.ts",
    "vitest.config.manual.ts"
  ],
  "exclude": ["node_modules", "**/build"]
}
