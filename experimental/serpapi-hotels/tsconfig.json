{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./build",
    "rootDir": ".",
    "sourceRoot": "./shared/src",
    "resolveJsonModule": true,
    "lib": ["es2022"],
    "types": ["node"]
  },
  "include": [
    "shared/src/**/*",
    "shared/build/**/*",
    "vitest.config.ts",
    "vitest.config.integration.ts",
    "vitest.config.manual.ts"
  ],
  "exclude": ["node_modules", "build"]
}
