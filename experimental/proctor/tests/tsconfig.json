{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "../build/tests",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2022"],
    "types": ["node"],
    "declaration": false,
    "declarationMap": false
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
