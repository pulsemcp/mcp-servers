# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Optional: Custom DynamoDB endpoint (for local development)
# DYNAMODB_ENDPOINT=http://localhost:8000

# Optional: Tool access control
# DYNAMODB_ENABLED_TOOL_GROUPS=readonly,readwrite
# DYNAMODB_ENABLED_TOOLS=dynamodb_get_item,dynamodb_query
# DYNAMODB_DISABLED_TOOLS=dynamodb_delete_table

# Optional: Skip startup health checks
# SKIP_HEALTH_CHECKS=true
