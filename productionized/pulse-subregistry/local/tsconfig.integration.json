{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./build",
    "rootDir": "./src"
  },
  "include": ["src/index.ts", "src/index.integration-with-mock.ts"],
  "exclude": ["node_modules", "build"]
}
